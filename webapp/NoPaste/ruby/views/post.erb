                <button class="btn btn-primary" id="add_star"><i class="icon-star icon-white"></i>ï¼‹</button>
                <% else %>
                <a href="<%= url_for('/signin') %>" class="btn">sign in to add Star</a>
                <% end %>
              <% if @post['stars'] > 0 %><i class="icon-star"></i><%= @post['stars'] %><% end %>
